generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuarios {
  uscodigo              String                  @id
  usnome                String
  usemail               String                  @unique
  usfoto                String
  ussenha               String
  createdAt             DateTime                @default(now())
  updatedAt             DateTime                @default(now())
  CodigosRecuperarSenha CodigosRecuperarSenha[]
  Contas                Contas[]
  CategoriasTransacoes  CategoriasTransacoes[]
  Veiculos              Veiculos[]
  Checklists            Checklists[]
  Tarefas               Tarefas[]
  Abastecimentos        Abastecimentos[]
  Manutencoes           Manutencoes[]

  @@map("usuarios")
}

model CodigosRecuperarSenha {
  crscodigo  String   @id
  crstoken   String
  crsusuario String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())

  //Relações
  usuario Usuarios @relation(fields: [crsusuario], references: [uscodigo])

  @@map("codigosRecuperarSenha")
}

enum UrgenciasEnum {
  URGENTE
  NORMAL
  MEDIA
}

//############################ Módulo Finance ############################//
enum TiposContasEnum {
  CORRENTE
  POUPANCA
  SALARIO
}

model Contas {
  cocodigo    String          @id
  coconta     String
  cousuario   String
  cobanco     String
  cotipoconta TiposContasEnum
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @default(now())

  //Relações
  usuario    Usuarios     @relation(fields: [cousuario], references: [uscodigo])
  Transacoes Transacoes[]

  @@map("contas")
}

model CategoriasTransacoes {
  ctcodigo    String   @id
  ctcategoria String
  ctusuario   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  //Relações
  usuario    Usuarios     @relation(fields: [ctusuario], references: [uscodigo])
  Transacoes Transacoes[]

  @@map("categoriasTransacoes")
}

model Transacoes {
  tscodigo    String   @id
  tstitulo    String
  tsdescricao String
  tsconta     String
  tsvalor     Float
  tsdespesa   Boolean  @default(false)
  tsquando    String
  tscategoria String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  //Relações
  conta     Contas               @relation(fields: [tsconta], references: [cocodigo])
  categoria CategoriasTransacoes @relation(fields: [tscategoria], references: [ctcodigo])

  @@map("transacoes")
}

//############################ Módulo Finance ############################//

//############################ Módulo Garage ############################//
model Veiculos {
  vecodigo    String   @id
  veplaca     String   @unique
  veusuario   String
  vehodometro Int
  venome      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  //Relações
  usuario        Usuarios         @relation(fields: [veusuario], references: [uscodigo])
  Abastecimentos Abastecimentos[]
  Despesas       Despesas[]
  Manutencoes    Manutencoes[]

  @@map("veiculos")
}

model Abastecimentos {
  abcodigo     String   @id
  abvalortotal Float
  ablitros     Float
  abvalorlitro Float
  abveiculo    String
  abusuario    String
  abhodometro  Int
  abquando     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())

  //Relações
  veiculo Veiculos @relation(fields: [abveiculo], references: [vecodigo])
  usuario Usuarios @relation(fields: [abusuario], references: [uscodigo])

  @@map("abastecimentos")
}

enum CategoriasDespesasEnum {
  ESTACIONAMENTO
  MULTA
  LAVAGEM
  SEGURO
  OUTRO
}

model Despesas {
  dpcodigo    String                 @id
  dpvalor     Float
  dpdescricao String
  dpcategoria CategoriasDespesasEnum
  dpveiculo   String
  dpquando    String
  dpkm        Int
  createdAt   DateTime               @default(now())
  updatedAt   DateTime               @default(now())

  //Relações
  veiculo Veiculos @relation(fields: [dpveiculo], references: [vecodigo])

  @@map("despesas")
}

model Manutencoes {
  mtcodigo    String   @id
  mtveiculo   String
  mtquando    String
  mtvalor     Float
  mtdescricao String
  mttitle     String
  mtusuario   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  //Relações
  veiculo Veiculos @relation(fields: [mtveiculo], references: [vecodigo])
  usuario Usuarios @relation(fields: [mtusuario], references: [uscodigo])

  @@map("manutencoes")
}

//############################ Módulo Garage ############################//

//############################ Módulo Checklists ############################//
model Checklists {
  ckcodigo     String   @id
  cktitulo     String
  ckusuario    String
  ckfinalizado Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())

  //Relações
  usuario         Usuarios          @relation(fields: [ckusuario], references: [uscodigo])
  itensChecklists ItensChecklists[]

  @@map("checklists")
}

model ItensChecklists {
  iccodigo    String   @id
  ictitulo    String
  icdescricao String
  iccheck     Boolean  @default(false)
  icchecklist String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  //Relações
  checklist Checklists @relation(fields: [icchecklist], references: [ckcodigo])

  @@map("itensChecklists")
}

//############################ Módulo Checklists ############################//

//############################ Módulo Tarefas ############################//
model Tarefas {
  tfcodigo      String        @id
  tftitulo      String
  tfdescricao   String
  tffeito       Boolean       @default(false)
  tfusuario     String
  tfurgencia    UrgenciasEnum
  tfdataentrega String
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @default(now())

  //Relações
  usuario    Usuarios     @relation(fields: [tfusuario], references: [uscodigo])
  Subtarefas Subtarefas[]

  @@map("tarefas")
}

model Subtarefas {
  stcodigo      String        @id
  sttarefa      String
  sttitulo      String
  stdescricao   String
  sturgencia    UrgenciasEnum
  stdateentrega String
  stfeito       Boolean       @default(false)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @default(now())

  //Relações
  tarefa Tarefas @relation(fields: [sttarefa], references: [tfcodigo])

  @@map("subTarefas")
}

//############################ Módulo Tarefas ############################//
